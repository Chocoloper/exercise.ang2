{
    "transpiler": "typescript",
    "compileOnSave": "true",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./node_modules/angular2/typings/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "./src/app/webApp.ts",
        "./node_modules/angular2/typings/tsd.d.ts"
    ]
}
